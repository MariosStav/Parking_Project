<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/unpark1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_orange">

    <!-- TextView at the top -->

    <!-- Electric cost image centered -->

    <!-- Gas cost image exactly overlapping electriccost -->

    <!-- Buttons side by side below images -->

    <TextView
        android:id="@+id/currentFeeText"
        android:layout_width="278dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:text="Fee: Loading..."
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costs_text" />

    <TextView
        android:id="@+id/costs_text"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:background="#BF233C78"
        android:drawablePadding="0dp"
        android:padding="16dp"
        android:text="Parking Cost Per Hour:"
        android:textColor="@color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187" />

    <ImageView
        android:id="@+id/electriccost"
        android:layout_width="340dp"
        android:layout_height="276dp"
        android:layout_marginTop="24dp"
        android:contentDescription="Electric cost image"
        android:src="@drawable/electriccost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/costs_text"
        app:layout_constraintVertical_bias="0.112" />

    <ImageView
        android:id="@+id/gascost"
        android:layout_width="341dp"
        android:layout_height="329dp"
        android:contentDescription="Gas cost image"
        android:src="@drawable/gascost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/costs_text"
        app:layout_constraintVertical_bias="0.103" />

    <Button
        android:id="@+id/unpark_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#88233C78"
        android:text="Unpark"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862"
        app:layout_constraintWidth_percent="0.48" />

</androidx.constraintlayout.widget.ConstraintLayout>