<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:padding="16dp">

    <TextView
        android:id="@+id/selectedSpotInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9F233C78"
        android:gravity="center"
        android:padding="8dp"
        android:text="Selected spot: ... "
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- Electric Cost Image -->

    <!-- Gas Cost Image -->

    <TextView
        android:id="@+id/securityDepositNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9F233C78"
        android:gravity="center"
        android:padding="12dp"
        android:text="A $20 deposit is held as security when you park."
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectedSpotInfo"
        app:layout_constraintVertical_bias="0.029" />

    <ImageView
        android:id="@+id/electriccost"
        android:layout_width="290dp"
        android:layout_height="288dp"
        android:contentDescription="Electric cost chart"
        android:src="@drawable/electriccost"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/securityDepositNotice"
        app:layout_constraintVertical_bias="0.159" />

    <ImageView
        android:id="@+id/gascost"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Gas cost chart"
        android:src="@drawable/gascost"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/securityDepositNotice" />

    <Button
        android:id="@+id/park"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:backgroundTint="#9F233C78"
        android:text="PARK"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.786" />

</androidx.constraintlayout.widget.ConstraintLayout>