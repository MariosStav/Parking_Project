<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_white"
    android:orientation="vertical"
    android:padding="16dp"> <!-- Add background color -->

    <!-- Frame Container -->
    <LinearLayout
        android:id="@+id/frame_container"
        android:layout_width="379dp"
        android:layout_height="480dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#00D5ACAC"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Balance -->

        <!-- Amount -->
        <TextView
            android:id="@+id/TextBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Balance:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#233C78"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/balanceEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/borders"
            android:enabled="false"
            android:gravity="center"
            android:hint=" "
            android:minHeight="48dp"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="24sp" />


        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/borders"
            android:gravity="center"
            android:hint="Amount: ($)"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <!--Layout to place the buttons on the same level-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="19dp">


            <!-- Payment Button -->
            <Button
                android:id="@+id/payParkingButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:alpha="0.5"
                android:backgroundTint="#99233C78"
                android:enabled="false"
                android:fontFamily="sans-serif-medium"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Payment"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                app:iconTint="#000000" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>